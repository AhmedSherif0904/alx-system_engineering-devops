#!/bin/bash
clear
echo -e "\e[1m\e[33m    A long time ago in a galaxy far, far away....\e[0m"
sleep 2
clear
echo -e "\e[31m
                .-^-.-^-.
               /_/_\_/_\
            .'.'._.'.'._.'.
           /_/_\_/_\_/_\_\
          .'.'._.'.'._.'._.'.
